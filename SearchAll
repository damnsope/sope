Sub UserForm_Activate()
    Dim cnn As ADODB.Connection, rs As ADODB.Recordset
    toFind = LCase(Environ("username"))
    toFind = "kelvintansh"
    dbPath = Sheets(1).Range("A3").Value

    If action = "check" Then
        SearchTagging.width = 550
        LBdata.width = 515
        btnSearch.Left = 350
        btnClear.Left = 350
        btnReset.Left = 422
        SearchTagging.Caption = "IC Tagging - Check Application Status"
    ElseIf action = "retag" Then
        SearchTagging.Caption = "IC Tagging - Retagging"
    ElseIf action = "untag" Then
        SearchTagging.Caption = "IC Tagging - Untagging"
    End If
    
    'On Error GoTo noRecordsfound
    strSQL = "SELECT * FROM IC_Tagging WHERE ([ARM]='" & toFind & "') OR " & _
                                            "([RM]='" & toFind & "') OR " & _
                                            "([RM TL]='" & toFind & "' ) OR " & _
                                            "([IC]='" & toFind & "' ) OR " & _
                                            "([IC TL]='" & toFind & "' ) ORDER BY [FirstSubmitDate] DESC"
    
    Set cnn = New ADODB.Connection ' Initialise the collection class variable
    Set rs = New ADODB.Recordset 'assign memory to the recordset
    cnn.Open "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=" & dbPath & ";Jet OLEDB:Database Password=dbs2018;"
    rs.Open strSQL, cnn, adOpenDynamic, adLockOptimistic, adCmdText
    
    'Reset listbox
    LBdata.Clear
    
    'Display all
    If action = "check" Then
         LBdata.ColumnCount = 7
        LBdata.ColumnWidths = "1;70;70;60;60;50;150"
        LBdata.AddItem "Case ID"
        LBdata.List(LBdata.ListCount - 1, 1) = "Request Type"
        LBdata.List(LBdata.ListCount - 1, 2) = "Status"
        LBdata.List(LBdata.ListCount - 1, 3) = "RM"
        LBdata.List(LBdata.ListCount - 1, 4) = "IC"
        LBdata.List(LBdata.ListCount - 1, 5) = "HH ID"
        LBdata.List(LBdata.ListCount - 1, 6) = "HH Name"
        
        On Error Resume Next
        With rs
            Do Until rs.EOF
                LBdata.AddItem .Fields(0).Value
                LBdata.List(LBdata.ListCount - 1, 1) = .Fields("ApplicationType").Value
                LBdata.List(LBdata.ListCount - 1, 2) = .Fields("CaseStatus").Value
                LBdata.List(LBdata.ListCount - 1, 3) = .Fields("RM").Value
                LBdata.List(LBdata.ListCount - 1, 4) = .Fields("IC").Value
                LBdata.List(LBdata.ListCount - 1, 5) = .Fields("CollectionID").Value
                LBdata.List(LBdata.ListCount - 1, 6) = .Fields("HouseholdName").Value
                .MoveNext
            Loop
        End With
    
    'Display all approved
    ElseIf action = "retag" Or action = "untag" Then
        LBdata.ColumnCount = 6
        LBdata.ColumnWidths = "1;50;60;60;50;150"
        LBdata.AddItem "Case ID"
        LBdata.List(LBdata.ListCount - 1, 1) = "Start Tag"
        LBdata.List(LBdata.ListCount - 1, 2) = "RM"
        LBdata.List(LBdata.ListCount - 1, 3) = "IC"
        LBdata.List(LBdata.ListCount - 1, 4) = "HH ID"
        LBdata.List(LBdata.ListCount - 1, 5) = "HH Name"
        
        
        On Error Resume Next
        With rs
            Do Until rs.EOF
                 If .Fields(2).Value = "Approved" Then
                    LBdata.AddItem .Fields(0).Value
                    LBdata.List(LBdata.ListCount - 1, 1) = Format(.Fields("TaggedMonth").Value, "mmm-yy")
                    LBdata.List(LBdata.ListCount - 1, 2) = .Fields("RM").Value
                    LBdata.List(LBdata.ListCount - 1, 3) = .Fields("IC").Value
                    LBdata.List(LBdata.ListCount - 1, 4) = .Fields("CollectionID").Value
                    LBdata.List(LBdata.ListCount - 1, 5) = .Fields("HouseholdName").Value
                    
                End If
                 .MoveNext
            Loop
        End With
    End If
    
    If LBdata.ListCount = 1 Then
           GoTo noRecordsfound
    End If

    Exit Sub
    
noRecordsfound:
        MsgBox "No records found.", vbInformation, "DBS Bank - Live more, Bank less"
End Sub
Private Sub btnClear_Click()
    TBHHID.Value = ""
    TBcaseID.Value = ""
    TB1bank.Value = ""
End Sub

Private Sub btnReset_Click()
    LBdata.Clear
    Call UserForm_Activate
End Sub
Private Sub btnSearch_Click()
LBdata.Clear
'Prevents from viewing what this user is not supposed to view
    On Error GoTo noRecordsfound
    If TBcaseID.Value <> "" Then
        strSQL = "SELECT * FROM IC_Tagging WHERE [CaseID]='" & TBcaseID.Value & "'"
    ElseIf TBHHID.Value <> "" And TB1bank.Value <> "" Then
        strSQL = "SELECT * FROM IC_Tagging WHERE (([ARM]='" & toFind & "' AND ([CollectionID] LIKE '%" & TBHHID.Value & "%' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM TL] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[IC TL] LIKE '%" & TB1bank.Value & "%'))) OR " & _
                                                "([RM]='" & toFind & "' AND ([CollectionID] LIKE '%" & TBHHID.Value & "%' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM TL] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[IC TL] LIKE '%" & TB1bank.Value & "%'))) OR " & _
                                                "([RM TL]='" & toFind & "' AND ([CollectionID] LIKE '%" & TBHHID.Value & "%' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM TL] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[IC TL] LIKE '%" & TB1bank.Value & "%'))) OR " & _
                                                "([IC]='" & toFind & "' AND ([CollectionID] LIKE '%" & TBHHID.Value & "%' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM TL] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[IC TL] LIKE '%" & TB1bank.Value & "%'))) OR " & _
                                                "([IC TL]='" & toFind & "' AND ([CollectionID] LIKE '%" & TBHHID.Value & "%' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[RM TL] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                                "[IC TL] LIKE '%" & TB1bank.Value & "%')))) ORDER BY [FirstSubmitDate] DESC"
    ElseIf TBHHID.Value <> "" Then
        strSQL = "SELECT * FROM IC_Tagging WHERE ([ARM]='" & toFind & "' AND [CollectionID] LIKE '%" & TBHHID.Value & "%') OR " & _
                                                "([RM]='" & toFind & "' AND [CollectionID] LIKE '%" & TBHHID.Value & "%') OR " & _
                                                "([RM TL]='" & toFind & "' AND [CollectionID] LIKE '%" & TBHHID.Value & "%') OR " & _
                                                "([IC]='" & toFind & "' AND [CollectionID] LIKE '%" & TBHHID.Value & "%') OR " & _
                                                "([IC TL]='" & toFind & "' AND [CollectionID] LIKE '%" & TBHHID.Value & "%') ORDER BY [FirstSubmitDate] DESC"
    ElseIf TB1bank.Value <> "" Then
         strSQL = "SELECT * FROM IC_Tagging WHERE ([ARM]='" & toFind & "' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[IC] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                "([RM]='" & toFind & "' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[IC] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                "([RM TL]='" & toFind & "' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[IC] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                "([IC]='" & toFind & "' AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[IC] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                "([IC TL]='" & toFind & "'  AND ([ARM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[RM] LIKE '%" & TB1bank.Value & "%' OR " & _
                                                                            "[IC] LIKE '%" & TB1bank.Value & "%' )) ORDER BY [FirstSubmitDate] DESC"
    
    
    End If
    
    Dim cnn As ADODB.Connection, rs As ADODB.Recordset
    Set cnn = New ADODB.Connection ' Initialise the collection class variable
    Set rs = New ADODB.Recordset 'assign memory to the recordset
    cnn.Open "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=" & dbPath & ";Jet OLEDB:Database Password=dbs2018;"
    rs.Open strSQL, cnn, adOpenDynamic, adLockOptimistic, adCmdText
    '============================================================================================
    'Display based on search
    If action = "check" Then
        'Reset listbox
        LBdata.ColumnCount = 7
        LBdata.ColumnWidths = "1;70;70;60;60;50;150"
        LBdata.AddItem "Case ID"
        LBdata.List(LBdata.ListCount - 1, 1) = "Request Type"
        LBdata.List(LBdata.ListCount - 1, 2) = "Status"
        LBdata.List(LBdata.ListCount - 1, 3) = "RM"
        LBdata.List(LBdata.ListCount - 1, 4) = "IC"
        LBdata.List(LBdata.ListCount - 1, 5) = "HH ID"
        LBdata.List(LBdata.ListCount - 1, 6) = "HH Name"
    
        On Error Resume Next
        With rs
            Do Until rs.EOF
                LBdata.AddItem .Fields(0).Value
                LBdata.List(LBdata.ListCount - 1, 1) = .Fields("ApplicationType").Value
                LBdata.List(LBdata.ListCount - 1, 2) = .Fields("CaseStatus").Value
                LBdata.List(LBdata.ListCount - 1, 3) = .Fields("RM").Value
                LBdata.List(LBdata.ListCount - 1, 4) = .Fields("IC").Value
                LBdata.List(LBdata.ListCount - 1, 5) = .Fields("CollectionID").Value
                LBdata.List(LBdata.ListCount - 1, 6) = .Fields("HouseholdName").Value
                .MoveNext
            Loop
        End With
        
    ElseIf action = "retag" Or action = "untag" Then 'Same as search limitations above, but status must be approved
        'Reset listbox
        LBdata.ColumnCount = 6
        LBdata.ColumnWidths = "1;50;60;60;50;150"
        LBdata.AddItem "Case ID"
        LBdata.List(LBdata.ListCount - 1, 1) = "Start Tag"
        LBdata.List(LBdata.ListCount - 1, 2) = "RM"
        LBdata.List(LBdata.ListCount - 1, 3) = "IC"
        LBdata.List(LBdata.ListCount - 1, 4) = "HH ID"
        LBdata.List(LBdata.ListCount - 1, 5) = "HH Name"
        
        On Error Resume Next
        With rs
            Do Until rs.EOF
                'Display only everything that is "Approved"
                If .Fields("CaseStatus").Value = "Approved" Then
                    LBdata.AddItem .Fields(0).Value
                    LBdata.List(LBdata.ListCount - 1, 1) = Format(.Fields("TaggedMonth").Value, "mmm-yy")
                    LBdata.List(LBdata.ListCount - 1, 2) = .Fields("RM").Value
                    LBdata.List(LBdata.ListCount - 1, 3) = .Fields("IC").Value
                    LBdata.List(LBdata.ListCount - 1, 4) = .Fields("CollectionID").Value
                    LBdata.List(LBdata.ListCount - 1, 5) = .Fields("HouseholdName").Value
                End If
                .MoveNext
            Loop
        End With
        
    Else
        MsgBox "Error"
    End If
    
    If LBdata.ListCount = 1 Then
        GoTo noRecordsfound
    End If

    Exit Sub
    
noRecordsfound:
        MsgBox "No records found.", vbInformation, "DBS Bank - Live more, Bank less"
        Call UserForm_Activate
End Sub
Private Sub btnSelect_Click()
    For i = 1 To LBdata.ListCount - 1
        If LBdata.Selected(i) Then
            TBcaseID.Value = LBdata.List(i)
            ShowDetails.Show
            Unload Me
        End If
    Next i
End Sub
